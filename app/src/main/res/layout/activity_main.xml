<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amit.hickerwatch.MainActivity">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/mount" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/hikers_watch"
        android:textColor="#fff"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="46dp"
        android:textSize="20dp"
        android:textColor="#fff"
        android:text="Latitude :" />

    <TextView
        android:id="@+id/logitude"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/latitude"
        android:layout_alignStart="@+id/latitude"
        android:layout_below="@+id/latitude"
        android:layout_marginTop="23dp"
        android:textColor="#fff"
        android:text="Logitude :" />

    <TextView
        android:id="@+id/accuracy"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/logitude"
        android:layout_alignStart="@+id/logitude"
        android:layout_below="@+id/logitude"
        android:layout_marginTop="28dp"
        android:textSize="20dp"
        android:text="Accuracy :" />

    <TextView
        android:id="@+id/altitude"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/accuracy"
        android:layout_alignStart="@+id/accuracy"
        android:layout_below="@+id/accuracy"
        android:layout_marginTop="22dp"
        android:text="Altitude :" />

    <TextView
        android:id="@+id/address"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/altitude"
        android:layout_alignStart="@+id/altitude"
        android:layout_below="@+id/altitude"
        android:layout_marginTop="18dp"
        android:text="Address :" />
</RelativeLayout>
